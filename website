<body>
    <!-- Embed YouTube video as background -->
    <iframe class="background-video" src="https://www.youtube.com/embed/jFUVdBQCFYA?autoplay=1&mute=1&loop=1&playlist=jFUVdBQCFYA" frameborder="0" allow="autoplay; loop; muted;"></iframe>

    <button class="claim-button" id="claimButton" onclick="claimCode()">Claim Your Code</button>

    <script>
        function claimCode() {
            const button = document.getElementById('claimButton');
            button.disabled = true;

            const pastebinLinks = [
                'https://pastebin.com/example1',
                'https://pastebin.com/example2',
                'https://pastebin.com/example3',
                // Add more links as needed
            ];

            const randomLink = pastebinLinks[Math.floor(Math.random() * pastebinLinks.length)];
            window.open(randomLink, '_blank');

            setTimeout(() => {
                button.disabled = false;
            }, 60000);
        }
    </script>
</body>
